<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExampleTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_indicator</item>
    </style>

    <style name="left_menu_row">
        <item name="android:background">@drawable/left_menu_row</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_padding_row</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="left_menu_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="left_menu_title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="left_menu_number">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:background">@drawable/rounded_red_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@drawable/background_item</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/background_list_front</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">@dimen/size_list_image</item>
        <item name="android:layout_height">@dimen/size_list_image</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="sms_row">
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_default</item>
    </style>

    <style name="New">
        <item name="android:textColor">@color/text_new_tag</item>
        <item name="android:textSize">@dimen/font_size_new_tag</item>
        <item name="android:text">@string/newTag</item>
        <item name="android:background">@drawable/background_new_tag</item>
        <item name="android:padding">@dimen/padding_new_tag</item>
    </style>

</resources>