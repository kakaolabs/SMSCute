<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExampleTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_indicator</item>
    </style>

    <style name="left_menu_row">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_padding_row</item>
    </style>

    <style name="left_menu_title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_level_3</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>